{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "warn"
      },
      "style": {
        "noDefaultExport": "warn",
        "noNonNullAssertion": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "files": {
    "ignore": ["node_modules", "dist", "test/coverage"],
    "include": [
      "niljs",
      "hardhat-plugin",
      "create-nil-hardhat-project",
      "docs",
      "explorer_frontend",
      "explorer_backend",
      "smart-contracts",
      "clijs"
    ]
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  }
}
