{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
